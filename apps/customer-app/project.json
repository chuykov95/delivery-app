{
  "name": "customer-app",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "customer-app/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular/build:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/customer-app",
        "browser": "customer-app/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "customer-app/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "customer-app/public"
          }
        ],
        "styles": ["customer-app/src/styles.scss"],
        "server": "customer-app/src/main.server.ts",
        "ssr": {
          "entry": "customer-app/src/server.ts"
        },
        "outputMode": "server"
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "continuous": true,
      "executor": "@angular/build:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "customer-app:build:production"
        },
        "development": {
          "buildTarget": "customer-app:build:development"
        }
      },
      "defaultConfiguration": "development",
      "dependsOn": ["api:serve"],
      "options": {
        "proxyConfig": "customer-app/proxy.conf.json"
      }
    },
    "extract-i18n": {
      "executor": "@angular/build:extract-i18n",
      "options": {
        "buildTarget": "customer-app:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "customer-app:build",
        "port": 4200,
        "staticFilePath": "dist/customer-app/browser",
        "spa": true
      }
    }
  }
}
